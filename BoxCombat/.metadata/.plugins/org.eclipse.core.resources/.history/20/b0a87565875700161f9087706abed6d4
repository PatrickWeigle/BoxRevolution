package game;
import java.awt.event.KeyEvent;

import javax.swing.JTextField;

import jplay.*;
public class Login {
	private Window janela;
	private Scene cena;
	
	public Login(Window window){
		janela = window;
		janela.add(new JTextField("testeddddddddddddddddddddddddddddddddddddddddddddddddddddteste",500));
		cena = new Scene();
		cena.loadFromFile(URL.scenario("login.scn"));	
		
		
		run();
	}
	private void run() {
		// TODO Auto-generated method stub
		Keyboard input = janela.getKeyboard();
		while(true){
			cena.draw();			
			janela.update();
			
				if(input.keyDown(KeyEvent.VK_ENTER)){
				janela.setSize(1280, 720);
				new Cenario(janela);
				}else if (input.keyDown(KeyEvent.VK_ESCAPE)){
				System.exit(0);	
				}
		}
		
	}

}
